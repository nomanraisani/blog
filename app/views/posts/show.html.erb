<div id="post_content">
<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date">
	submitted <span class="tme"><%= time_ago_in_words(@post.created_at) %></span> Ago
	<%= link_to 'Edit', edit_post_path(@post), class: 'ebutton' %>
	<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are You Sure'}, class: 'dbutton' %>
</p>

<p class="body">
	<%= @post.body %>
</p

<div id="comments">
	<h2><%= @post.comments.count %> Comments</h2>
	<%= render @post.comments %>
	<h3>Add a Comment:</h3>
	<%= render "comments/form" %>
</div>
</div>